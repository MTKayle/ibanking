{
  "info": {
    "name": "VietQR API Collection",
    "description": "Collection for testing VietQR code generation API - Returns PNG image directly",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"0123456789\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:8089/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8089",
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "VietQR",
      "item": [
        {
          "name": "Generate Static QR Code (No Amount) - PNG Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "JWT token from login"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "http://localhost:8089/api/accounts/checking/qr-code",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8089",
              "path": ["api", "accounts", "checking", "qr-code"]
            },
            "description": "Generate a static QR code without predefined amount. Returns PNG image directly. Account info is in response headers (X-Account-Number, X-Account-Holder)."
          },
          "response": []
        },
        {
          "name": "Generate Dynamic QR Code (With Amount) - PNG Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "JWT token from login"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 500000,\n  \"description\": \"Thanh toan hoa don\"\n}"
            },
            "url": {
              "raw": "http://localhost:8089/api/accounts/checking/qr-code",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8089",
              "path": ["api", "accounts", "checking", "qr-code"]
            },
            "description": "Generate a dynamic QR code with predefined amount and description. Returns PNG image directly. Amount and account info are in response headers."
          },
          "response": []
        },
        {
          "name": "Generate QR with Amount Only - PNG Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "JWT token from login"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 1000000\n}"
            },
            "url": {
              "raw": "http://localhost:8089/api/accounts/checking/qr-code",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8089",
              "path": ["api", "accounts", "checking", "qr-code"]
            },
            "description": "Generate QR code with amount only, no description. Returns PNG image."
          },
          "response": []
        },
        {
          "name": "Generate QR with Description Only - PNG Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "JWT token from login"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Chuyen tien cho ban\"\n}"
            },
            "url": {
              "raw": "http://localhost:8089/api/accounts/checking/qr-code",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8089",
              "path": ["api", "accounts", "checking", "qr-code"]
            },
            "description": "Generate static QR code with description only. Returns PNG image."
          },
          "response": []
        }
      ]
    },
    {
      "name": "QR Scan",
      "item": [
        {
          "name": "Scan QR Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "JWT token from login"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"qrContent\": \"00020101021238570010A000000727011497042201021234567890530370454065000005802VN5913NGUYEN VAN A6006HA NOI62200816Thanh toan hoa don6304XXXX\"\n}"
            },
            "url": {
              "raw": "http://localhost:8089/api/qr/scan",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8089",
              "path": ["api", "qr", "scan"]
            },
            "description": "Scan VietQR code and get account information for transfer. Returns account details, bank info, amount and description."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Account Info",
      "item": [
        {
          "name": "Get Checking Account Info",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "JWT token from login"
              }
            ],
            "url": {
              "raw": "http://localhost:8089/api/accounts/:userId/checking",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8089",
              "path": ["api", "accounts", ":userId", "checking"],
              "variable": [
                {
                  "key": "userId",
                  "value": "1",
                  "description": "User ID"
                }
              ]
            },
            "description": "Get checking account information for a user."
          },
          "response": []
        },
        {
          "name": "Get Account Info by Account Number",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "JWT token from login"
              }
            ],
            "url": {
              "raw": "http://localhost:8089/api/accounts/info/:accountNumber",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8089",
              "path": ["api", "accounts", "info", ":accountNumber"],
              "variable": [
                {
                  "key": "accountNumber",
                  "value": "5329812059",
                  "description": "Account Number to lookup"
                }
              ]
            },
            "description": "Get account information by account number including account holder name, bank details and account type."
          },
          "response": []
        }
      ]
    }
  ],
